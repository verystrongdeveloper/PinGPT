{
    "manifest_version": 3,
    "name": "Chatpin",
    "version": "0.1.0",
    "description": "ChatGPT 대화에 스마트 북마크 기능을 추가하는 Chrome 확장 프로그램",
    "author": "Chatpin Team",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Chatpin - 북마크 관리"
    },
    "content_scripts": [
        {
            "matches": [
                "https://chat.openai.com/*",
                "https://chatgpt.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ]
}